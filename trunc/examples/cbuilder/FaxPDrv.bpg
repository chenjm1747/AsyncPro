MAKE = $(ROOT)\bin\make.exe -$(MAKEFLAGS) -f$**
DCC = $(ROOT)\bin\dcc32.exe $**
BRCC = $(ROOT)\bin\brcc32.exe $**
#------------------------------------------------------------------------------
PROJECTS = ExCtl EXPNDX FaxMon FAXSERVX FaxServr
#------------------------------------------------------------------------------
default: $(PROJECTS)
#------------------------------------------------------------------------------

ExCtl: ExCtl.bpr
  $(MAKE)

FaxMon: FaxMon.bpr
  $(MAKE)

FAXSERVX: FAXSERVX.bpr
  $(MAKE)

EXPNDX: EXPNDX.bpr
  $(MAKE)

FaxServr: FaxServr.bpr
  $(MAKE)


